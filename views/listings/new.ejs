<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="subHead signup-subhead">
        Please Register your Listing
    </div>
    <form action="/listings" method="post" id="registerForm" enctype="multipart/form-data">
        <div class="form listDetail">
            <div id="titleDiv">
                <label class="field" for="title">Name : </label>
                <input type="text" name="listing[title]" id="title" placeholder="Enter Title for your Listing Here" required>
                <i class="fa-solid fa-check" id="titleIconFill"></i>
                <i class="fa-solid fa-circle-info" id="titleIconEmpty"></i>
            </div>
            <div>
                <label class="field" for="imageFile">Upload Image : </label>
                <input type="file" name="listing[image]" id="imageFile" required>
            </div>
            <div id="descriptionDiv">
                <label class="field" for="description">Description : </label><br>
                <textarea type="text" name="listing[description]" id="description" placeholder="Enter Description for your Listing Here" required cols="60" rows="15"></textarea>
                <i class="fa-solid fa-check" id="descriptionIconFill"></i>
                <i class="fa-solid fa-circle-info" id="descriptionIconEmpty"></i>
            </div>
            <div id="priceDiv">
                <label class="field" for="price">Price : </label>
                <input type="text" name="listing[price]" required id="price" placeholder="Enter Price for your Listing Here">
                <i class="fa-solid fa-check" id="priceIconFill"></i>
                <i class="fa-solid fa-circle-info" id="priceIconEmpty"></i>
            </div>
            <div id="locationDiv">
                <label class="field" for="location">Location : </label>
                <input type="text" name="listing[location]" required id="location" placeholder="Enter Location for your Listing Here">
                <i class="fa-solid fa-check" id="locationIconFill"></i>
                <i class="fa-solid fa-circle-info" id="locationIconEmpty"></i>
            </div>
            <div id="countryDiv">
                <label class="field" for="country">Country : </label>
                <input type="text" name="listing[country]" id="country" required placeholder="Enter Country for your Listing Here">
                <i class="fa-solid fa-check" id="countryIconFill"></i>
                <i class="fa-solid fa-circle-info" id="countryIconEmpty"></i>
            </div>
        </div>
        <div class="listDetail">
            <button class="signupBtn newBtn" id="formBtn">Register Your List</button>
        </div>
    </form>
</body>
</html>